<% @page_title = 'Consulta Programas' %>

<% @consulta_ativa = true %>

<div class="hero-unit">
  <h3>Consulta</h3>
  <p>Encontre programas informando nome ou parte do nome dos órgãos executor, superior, mandatário ou vinculado.</p>
</div>

<div class="row-fluid">
<% form_tag '/consulta/programas', :method => 'get', :id => 'form_consulta', :class => 'form-search' do %>
  <div class="input-append">
    <input type="text" class="span12 search-query" id="search_params" name="search_params" value="<%= params[:search_params] %>">
    <button type="submit" class="btn" onclick="return validaFiltroConsulta()">Consultar</button>
  </div>
<% end %>
</div>

<% if params['search_params'] && !params['search_params'].empty? %>
  <div name="div_resultado_consulta">
    <%= search_data_list :data => @programas, :total => @total %>
  </div>
<% end %>
